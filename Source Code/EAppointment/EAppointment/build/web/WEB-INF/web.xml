<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>dbURL</param-name>
        <param-value>jdbc:mysql://localhost:3306/eappointmentdb?autoReconnect=true</param-value>
    </context-param>
    <context-param>
        <param-name>dbUserName</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>saibaba</param-value>
    </context-param>
    <listener>
        <description>ServletContextListener</description>
        <listener-class> classes.com.web.ServletListeners.ContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>InsertIntoUserDetailsServlet</servlet-name>
        <servlet-class>classes.com.web.Admin.AddUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginAuthenticationServlet</servlet-name>
        <servlet-class>classes.com.web.Servlets.Login.LoginAuthenticationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertProspectAppointmentsServlet</servlet-name>
        <servlet-class>classes.com.web.Appointments.Book_Appointment_For_Prospect_Student</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PopulateProsBookAppointment</servlet-name>
        <servlet-class>classes.com.web.Appointments.GetAvailTimeSlotsOfAdvisor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MyAppointments</servlet-name>
        <servlet-class>classes.com.web.Appointments.MyAppointments</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePasswordController</servlet-name>
        <servlet-class>classes.com.web.Servlets.Profile.ChangePasswordController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Manage</servlet-name>
        <servlet-class>classes.com.web.Appointments.ManageAppointments</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewSetUpAppointment</servlet-name>
        <servlet-class>classes.com.web.Appointments.ViewSetUpAppointment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookAppointmentForCurrentStudent</servlet-name>
        <servlet-class>classes.com.web.Appointments.BookAppointmentForCurrentStudent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditUser</servlet-name>
        <servlet-class>classes.com.web.Admin.EditUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmAppointment</servlet-name>
        <servlet-class>classes.com.web.Appointments.ConfirmAppointment</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InsertIntoUserDetailsServlet</servlet-name>
        <url-pattern>Admin/InsertToDb</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginAuthenticationServlet</servlet-name>
        <url-pattern>Login/AuthenticateLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertProspectAppointmentsServlet</servlet-name>
        <url-pattern>Appointments/BookAppointmentForProspectStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PopulateProsBookAppointment</servlet-name>
        <url-pattern>Appointments/BookAppointment.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MyAppointments</servlet-name>
        <url-pattern>Appointments/ViewMyAppointments</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePasswordController</servlet-name>
        <url-pattern>Profile/ChangePwd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Manage</servlet-name>
        <url-pattern>Appointments/SetUpAppointments</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewSetUpAppointment</servlet-name>
        <url-pattern>Appointments/MySetUp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookAppointmentForCurrentStudent</servlet-name>
        <url-pattern>Appointments/ConfirmAppointment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditUser</servlet-name>
        <url-pattern>Admin/Edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmAppointment</servlet-name>
        <url-pattern>Appointments/UpdateStatus</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            -1
        </session-timeout>
    </session-config>
</web-app>
